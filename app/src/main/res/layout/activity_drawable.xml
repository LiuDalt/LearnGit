<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.administrator.drawable.DrawableActivity">
    <ImageView
        android:id="@+id/drawableimg1"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <ImageView
        android:id="@+id/drawableimg2"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <ImageView
        android:id="@+id/drawableimg3"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <com.example.administrator.drawable.RingView
        android:id="@+id/drawableimg4"
        app:radius="80dp"
        app:ring_color="@android:color/holo_blue_bright"
        app:stroke_width="20dp"
        app:arc_type="three_quarter"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <com.example.administrator.drawable.BorderImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/beauty"
        android:scaleType="centerCrop"
        android:padding="8dp"/>
</LinearLayout>
