<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.animate.AnimateActivity">
    <FrameLayout
        android:id="@+id/test_animate_container"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/left_top_view"
            android:background="@android:color/holo_green_light"
            android:layout_width="10dp"
            android:layout_height="10dp"></View>
        <View
            android:id="@+id/right_top_view"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="10dp"
            android:layout_height="10dp"></View>
        <View
            android:id="@+id/right_bottom_view"
            android:background="@android:color/holo_red_light"
            android:layout_width="10dp"
            android:layout_height="10dp"></View>
        <View
            android:id="@+id/left_bottom_view"
            android:background="@android:color/black"
            android:layout_width="10dp"
            android:layout_height="10dp"></View>
        <EditText
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/test_animate_tv"
            android:text="1111111\n哈哈哈哈啊哈哈哈啊哈\nsdfsafsadfsadfsda"
            android:background="#90000000"
            android:textColor="#ffffff"
            android:gravity="left"
            android:padding="0dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View android:layout_width="match_parent"
              android:id="@+id/caption_touchview"
              android:layout_height="match_parent"></View>
    </FrameLayout>
    <LinearLayout
        android:weightSum="4"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/test_show_img"
            android:layout_gravity="bottom"
            android:text="展示"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/animate_revert"
            android:layout_gravity="bottom|center_horizontal"
            android:text= "撤销"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/animate_restore"
            android:layout_gravity="bottom|right"
            android:text= "恢复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/addtext"
            android:layout_gravity="bottom|right"
            android:text= "加文字 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/deletetext"
            android:layout_gravity="bottom|right"
            android:text= "减文字 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/test_animate_iv"
        android:layout_gravity="bottom|right"
        android:layout_width="100dp"
        android:layout_height="150dp"/>
</FrameLayout>
