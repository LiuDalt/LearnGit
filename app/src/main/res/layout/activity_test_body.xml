<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context="com.example.administrator.body.TestBodyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="50dp">
    <com.example.administrator.body.BodySlimLine
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.example.administrator.body.TriangleView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="60dp"/>

    <Button
        android:id="@+id/test_slim_line"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.administrator.body.BodySlimBoard
        android:id="@+id/body_slim_board"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.administrator.body.BodySlimBoard>

</LinearLayout>
