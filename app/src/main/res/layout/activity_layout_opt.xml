<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/opt_rootly"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.layoutopt.LayoutOptActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/text_viewstub"
            android:textAllCaps="false"
            android:text="ViewStubTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ViewStub
            android:id="@+id/viewstub_inflate"
            android:layout="@layout/viewstub_test_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include
        layout="@layout/includely"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <include android:layout_width="match_parent"
                 layout="@layout/merge_includely"
                 android:layout_height="wrap_content"></include>
    </LinearLayout>
    <android.support.v7.widget.AppCompatTextView
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:textSize="20sp"
        android:text="22222"
        android:layout_width="100dp"
        android:layout_height="20dp"/>
    <Button
        android:id="@+id/test_img_btn"
        android:text="点击展示当前页面"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/test_img_view"
        android:layout_width="300dp"
        android:layout_height="450dp"/>


</LinearLayout>
