<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audio_rhythm_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.administrator.AudioRhythm.AudioWavView
        android:id="@+id/audio_view"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <View
        android:id="@+id/unavailabe_mask_view"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:background="#96FFDAB9"
        android:layout_width="20dp"
        android:layout_height="80dp"></View>
    <LinearLayout
        android:id="@+id/audio_slideview"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/audio_time_tv"
            android:text="8s"
            android:gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="50dp"
            android:layout_height="20dp"/>
        <View
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#2F4F4F"
            android:layout_width="2dp"
            android:layout_height="wrap_content">
        </View>
        <TextView
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_red_light"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>
</FrameLayout>