<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.AudioRhythm.AudioActivity">

    <com.example.administrator.AudioRhythm.AudioRhythmView
        android:id="@+id/audio_rhythm_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.administrator.AudioRhythm.AudioRhythmView>
    <Button
        android:id="@+id/show_wavs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="展示音谱"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/audio_rhythm_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/change_unavailable"
        android:text="切换不可达"
        app:layout_constraintTop_toBottomOf="@id/show_wavs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>
